#!/usr/bin/env bash
# This script tells the story of each user in /etc/passwd in a creative format

while IFS=: read -r username password uid gid gecos homedir shell; do
    # Extract the first part of GECOS (before first comma) for user info
    user_info=$(echo "$gecos" | cut -d',' -f1)
    [ -z "$user_info" ] && user_info="$username"  # Fallback to username if empty
    
    echo "The user $username is part of the $gid gang, lives in $homedir and rides $shell. $uid's place is protected by the passcode $password, more info about the user here: $user_info"
done < /etc/passwd
